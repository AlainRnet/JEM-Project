<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>JEM Latest Events Wide Module</name>
	<author>JEM Community</author>
	<authorEmail>info@joomlaeventmanager.net</authorEmail>
	<authorUrl>http://www.joomlaeventmanager.net</authorUrl>
	<creationDate>13 October 2012</creationDate>
	<copyright>Copyright (C) 2013-2013 joomlaeventmanager.net</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.9</version>
	<description>JEM Latest Events Wide Module. JEM is based on Eventlist by Christoph Lukes (http://www.schlu.net)</description>

	<files>
		<filename module="mod_jem_wide">mod_jem_wide.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_jem_wide.ini</language>
		<language tag="de-DE">language/de-DE/de-DE.mod_jem_wide.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
		<field name="count" type="text" default="5" label="MOD_JEM_WIDE_EVENTS_IN_MODULE" description="MOD_JEM_WIDE_EVENTS_IN_MODULE_DESC" />
		<field name="type" type="list" default="1" label="MOD_JEM_WIDE_UPCOMING_ARCHIVED_OR_CURRENT" description="MOD_JEM_WIDE_UPCOMING_ARCHIVED_OR_CURRENT_DESC">
			<option value="1">MOD_JEM_WIDE_UPCOMING_EVENTS</option>
			<option value="2">MOD_JEM_WIDE_ARCHIVED_EVENTS</option>
			<option value="3">MOD_JEM_WIDE_CURRENT_EVENTS</option>
		</field>
		<field name="cuttitle" type="text" default="18" label="MOD_JEM_WIDE_MAX_TITLE_LENGTH" description="MOD_JEM_WIDE_MAX_TITLE_LENGTH_DESC" />
		<field name="linkevent" type="radio" default="1" label="MOD_JEM_WIDE_LINK_TO_DETAILS" description="MOD_JEM_WIDE_LINK_TO_DETAILS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="linkcategory" type="radio" default="1" label="MOD_JEM_WIDE_LINK_TO_CATEGORY" description="MOD_JEM_WIDE_LINK_TO_CATEGORY_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="linkvenue" type="radio" default="1" label="MOD_JEM_WIDE_LINK_TO_VENUE" description="MOD_JEM_WIDE_LINK_TO_VENUE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="use_modal" type="radio" default="0" label="MOD_JEM_WIDE_USE_MODAL" description="MOD_JEM_WIDE_USE_MODAL_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="catid" type="text" default="" label="MOD_JEM_WIDE_CATEGORY_ID" description="MOD_JEM_WIDE_CATEGORY_ID_DESC" />
		<field name="venid" type="text" default="" label="MOD_JEM_WIDE_VENUE_ID" description="MOD_JEM_WIDE_VENUE_ID_DESC" />

		<field name="stateloc" type="text" default="" label="MOD_JEM_WIDE_STATE" description="MOD_JEM_WIDE_STATE_DESC" />

		<field name="datemethod" type="list" default="1" label="MOD_JEM_WIDE_SHOW_DATE_OR_DAY_DIFFERENCE" description="MOD_JEM_WIDE_SHOW_DATE_OR_DAY_DIFFERENCE_DESC">
			<option value="1">MOD_JEM_WIDE_SHOW_DATE</option>
			<option value="2">MOD_JEM_WIDE_SHOW_DAY_DIFFERENCE</option>
		</field>

		<field name="formatdate" type="text" default="%d.%m.%Y" label="MOD_JEM_WIDE_DATE_FORMAT" description="MOD_JEM_WIDE_DATE_FORMAT_DESC" />
		<field name="formattime" type="text" default="%H.%M" label="MOD_JEM_WIDE_TIME_FORMAT" description="MOD_JEM_WIDE_TIME_FORMAT_DESC" />
		<field name="moduleclass_sfx" type="text" default="" label="MOD_JEM_WIDE_MODULE_CLASS_SUFFIX" description="MOD_JEM_WIDE_MODULE_CLASS_SUFFIX_DESC" />
	</fieldset>

	<fieldset name="advanced">
		<field name="cache" type="list" default="1" label="MOD_JEM_WIDE_CACHING" description="MOD_JEM_WIDE_CACHING_DESC">
			<option value="1">MOD_JEM_WIDE_USE_GLOBAL</option>
			<option value="0">MOD_JEM_WIDE_NO_CACHING</option>
		</field>
		<field name="cache_time" type="text" default="900" label="MOD_JEM_WIDE_CACHE_TIME" description="MOD_JEM_WIDE_CACHE_TIME_DESC" />
	</fieldset>
		</fields>
	</config>

</extension>
