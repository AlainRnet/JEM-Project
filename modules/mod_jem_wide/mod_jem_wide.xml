<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>JEM Latest Events Wide Module</name>
	<author>JEM Community</author>
	<authorEmail>info@joomlaeventmanager.net</authorEmail>
	<authorUrl>http://www.joomlaeventmanager.net</authorUrl>
	<creationDate>13 October 2012</creationDate>
	<copyright>Copyright (C) 2013-2013 joomlaeventmanager.net</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>2.0.0.1</version>
	<description>JEM Latest Events Wide Module. JEM is based on Eventlist by Christoph Lukes (http://www.schlu.net)</description>

	<files>
		<filename module="mod_jem_wide">mod_jem_wide.php</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">languages/en-GB.mod_jem_wide.ini</language>
		<language tag="de-DE">languages/de-DE.mod_jem_wide.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
		<field name="count" type="text" default="5" label="EVENTS IN MODULE" description="EVENTS IN MODULE DESC" />
		<field name="type" type="list" default="1" label="UPCOMING ARCHIVED OR CURRENT" description="UPCOMING ARCHIVED OR CURRENT DESC">
			<option value="1">UPCOMING EVENTS</option>
			<option value="2">ARCHIVED EVENTS</option>
			<option value="3">CURRENT EVENTS</option>
		</field>
		<field name="cuttitle" type="text" default="18" label="MAX TITLE LENGTH" description="MAX TITLE LENGTH DESC" />
		<field name="linkevent" type="radio" default="1" label="LINK TO DETAILS" description="LINK TO DETAILS DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>
		<field name="linkcategory" type="radio" default="1" label="LINK TO CATEGORY" description="LINK TO CATEGORY DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>
		<field name="linkvenue" type="radio" default="1" label="LINK TO VENUE" description="LINK TO VENUE DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>
		<field name="use_modal" type="radio" default="0" label="USE MODAL" description="USE MODAL DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</field>
		<field name="catid" type="text" default="" label="CATEGORY ID" description="CATEGORY ID DESC" />
		<field name="venid" type="text" default="" label="VENUE ID" description="VENUE ID DESC" />

		<field name="stateloc" type="text" default="" label="STATE" description="STATE DESC" />

		<field name="datemethod" type="list" default="1" label="SHOW DATE OR DAY DIFFERENCE" description="SHOW DATE OR DAY DIFFERENCE DESC">
			<option value="1">SHOW DATE</option>
			<option value="2">SHOW DAY DIFFERENCE</option>
		</field>

		<field name="formatdate" type="text" default="%d.%m.%Y" label="DATE FORMAT" description="DATE FORMAT DESC" />
		<field name="formattime" type="text" default="%H.%M" label="TIME FORMAT" description="TIME FORMAT DESC" />
		<field name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX" description="MODULE CLASS SUFFIX DESC" />
	</fieldset>

	<fieldset name="advanced">
		<field name="cache" type="list" default="1" label="CACHING" description="CACHING DESC">
			<option value="1">USE GLOBAL</option>
			<option value="0">NO CACHING</option>
		</field>
		<field name="cache_time" type="text" default="900" label="CACHE TIME" description="CACHE TIME DESC" />
	</fieldset>
		</fields>
	</config>

</extension>